{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run CMake Utility Target",
      "type": "cppdbg",                // Use cppdbg for Linux/macOS; cppvsdbg for Windows
      "request": "launch",
      "program": "/usr/bin/cmake",      // Path to your CMake binary
      "args": [
        "--build",
        "build",     // Path to your build directory
        "--target",
        "run_sandbox",    // Your CMake custom target
                // Optional: run in parallel
      ],
      "cwd": "${workspaceFolder}/Examples/Sandbox",      // Working directory
      "externalConsole": false,          // So you see full terminal output
      "MIMode": "gdb",                  // Or lldb
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: Configure Build"
    }
  ]
}
